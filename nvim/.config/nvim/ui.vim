" show matching parens/brackets
set showmatch

" disable startup message
set shortmess+=I

" syntax highlighting
syntax on
set synmaxcol=512 " disable syntax highlighting for long-lined markup files
filetype plugin on

" show line numbers
set number

" no line wrapping
set nowrap

" higlight cursor
" set cursorline

" split
set fillchars=vert:▒

