#!/bin/sh

red="\e[31m"
grn="\e[32m"
ylw="\e[33m"
cyn="\e[36m"
blu="\e[34m"
prp="\e[35m"
bprp="\e[35;1m"
rst="\e[0m"

echo
echo
echo -e "               ${grn}&&${rst} "
echo -e "              ${grn}&&&&&${rst} "
echo -e "           ${grn}&&${rst}${red}|,/  |/${rst}${grn}&${rst} ${grn}&&${rst} "
echo -e "            ${grn}&&${rst}${red}/   /  /_${rst}${grn}&${rst}  ${grn}&&${rst} "
echo -e "              ${red}\  {  |_____/_${rst}${grn}&${rst} "
echo -e "              ${red}{  / /          ${rst}${grn}&&&${rst} "
echo -e "              ${red}| \ {___________/_${rst}${grn}&&${rst} "
echo -e "               ${red}} }{       \ ${rst} "
echo -e "               ${red}}{{         \____${rst}${grn}&${rst} "
echo -e "              ${red}{}{          ${rst}${grn}&&&${rst}${red}\ ${rst}${grn}&&${rst} "
echo -e "              ${red}{{}             ${rst}${grn}&&${rst} "
echo -e "        ${red}, -=-~{ \^- _ ${rst}"
echo
echo
echo -e "  ${red}    shell  ${rst}"  " zsh    "
echo -e "  ${grn}    wm     ${rst}"  " bspwm   "
echo -e "  ${prp}    editor ${rst}"  " neovim   "
echo -e "  ${cyn}    distro ${rst}"  " arch "
echo -e "  ${blu}    kernel ${rst}"  " $(uname -r) "
echo
echo
